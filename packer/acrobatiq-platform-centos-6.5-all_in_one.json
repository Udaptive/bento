{
    "variables": {
        "base_name": "acrobatiq-platform-centos-6.5-all_in_one",
        "aws_instance_type": "c3.xlarge",
        "aws_region": "us-east-1",
        "aws_access_key": null,
        "aws_secret_key": null,
        "mirror": "http://mirrors.rit.edu/centos",
        "git_username": null,
        "git_password": null,
        "git_repo": "Udaptive/platform.git",
        "git_branch": "9_27_maintenance"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "source_ami": "ami-8997afe0",
            "instance_type": "{{user `aws_instance_type`}}",
            "ssh_username": "root",
            "ami_name": "{{user `base_name`}}-{{timestamp}}",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sdc",
                    "volume_type": "gp2",
                    "volume_size": 40
                },
                {
                    "device_name": "/dev/sdd",
                    "volume_type": "gp2",
                    "volume_size": 60
                },
                {
                    "device_name": "/dev/sde",
                    "volume_type": "gp2",
                    "volume_size": 60
                }
            ],
            "ami_block_device_mappings": [
                {
                    "device_name": "/dev/sdc",
                    "volume_type": "gp2",
                    "volume_size": 40
                },
                {
                    "device_name": "/dev/sdd",
                    "volume_type": "gp2",
                    "volume_size": 60
                },
                {
                    "device_name": "/dev/sde",
                    "volume_type": "gp2",
                    "volume_size": 60
                }
            ]
        },
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.5/ks.cfg<enter><wait>"
            ],
            "boot_wait": "10s",
            "disk_size": 61440,
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "guest_os_type": "RedHat_64",
            "http_directory": "http",
            "iso_checksum": "32c7695b97f7dcd1f59a77a71f64f2957dddf738",
            "iso_checksum_type": "sha1",
            "iso_url": "{{user `mirror`}}/6.5/isos/x86_64/CentOS-6.5-x86_64-bin-DVD1.iso",
            "output_directory": "{{user `base_name`}}-virtualbox",
            "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_username": "vagrant",
            "ssh_wait_timeout": "10000s",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "1536"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "2"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--rtcuseutc",
                    "on"
                ]
            ],
            "virtualbox_version_file": ".vbox_version",
            "vm_name": "{{user `base_name`}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "only": ["amazon-ebs"],
            "scripts": [
                "scripts/platform/volumes-all_in_one.sh"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/centos/base-packages.sh",
                "scripts/centos/acrobatiq.sh",
                "scripts/platform/git-clone.sh"
            ],
            "environment_vars": [
                "GIT_USERNAME={{user `git_username`}}",
                "GIT_PASSWORD={{user `git_password`}}",
                "GIT_REPO={{user `git_repo`}}",
                "GIT_BRANCH={{user `git_branch`}}"
            ],
            "override": {
                "virtualbox-iso": {
                    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
                }
            }
        },
        {
            "type": "shell",
            "only": ["amazon-ebs"],
            "scripts": [
                "scripts/aws/cloud-init.sh"
            ]
        },
        {
            "type": "shell",
            "only": ["virtualbox-iso"],
            "scripts": [
                "scripts/centos/fix-slow-dns.sh",
                "scripts/common/sshd.sh",
                "scripts/common/vagrant.sh",
                "scripts/common/vmtools.sh",
                "scripts/centos/cleanup.sh",
                "scripts/common/minimize.sh"
            ],
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
        }
    ],
    "post-processors": [
        {
            "output": "../builds/{{.Provider}}/{{user `base_name`}}.box",
            "type": "vagrant",
            "only": ["virtualbox-iso"]
        }
    ]
}
